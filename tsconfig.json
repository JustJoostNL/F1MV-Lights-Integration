{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    //"baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": false,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/preload/**/*"]
}
